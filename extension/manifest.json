{
  "manifest_version": 3,
  "name": "ChromePilot",
  "version": "1.0.0",
  "description": "Remote Chrome tab control via WebSocket API with session management",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  "action": {
    "default_title": "Open ChromePilot Panel"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
